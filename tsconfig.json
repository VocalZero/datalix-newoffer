{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "target": "ES2020",
    "removeComments": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "typeRoots": ["types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "types"],
  "exclude": ["**/node_modules", "**/.*/"]
}
